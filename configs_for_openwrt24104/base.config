# 1. 基础架构（x86_64，软路由通用）
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y

# 2. 内核级必备依赖（插件/软路由底层）
CONFIG_TUN=y
CONFIG_TCP_CONG_BBR=y
CONFIG_NET_SCH_CAKE=y
CONFIG_VMWARE_BALLOON=y
CONFIG_VMWARE_VMCI=y
CONFIG_HYPERVISOR_GUEST=y
CONFIG_BRIDGE=y
CONFIG_IP_MULTICAST=y
CONFIG_NETFILTER_XT_TARGET_REDIRECT=y
CONFIG_NETFILTER_XT_MATCH_STRING=y
CONFIG_NETFILTER_XT_TARGET_MARK=y
CONFIG_NETFILTER_XT_NAT=y
CONFIG_IP_NF_NAT=y
CONFIG_IP_NF_IPTABLES=y

# 3. 系统核心包依赖（插件/界面基础）
CONFIG_PACKAGE_libopenssl=y
CONFIG_PACKAGE_libcurl=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_chrony=y
CONFIG_PACKAGE_wget-ssl=y

# 4. 中文界面基础
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# 5. 基础系统（精简但保留核心）
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y

# 6. 编译优化（平衡速度与稳定性）
CONFIG_CC_OPTIMIZE_FOR_PERFORMANCE=y
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_STRIP_UNUSED_KERNEL_EXPORTS=y

# 7. 软路由专属：基础网络核心功能（必留）
CONFIG_PACKAGE_netifd=y                # 多网口/接口管理
CONFIG_PACKAGE_iproute2=y              # 路由表配置
CONFIG_PACKAGE_iputils-ping=y          # 网络测试
CONFIG_PACKAGE_tcpdump=y               # 抓包调试
CONFIG_PACKAGE_dnsmasq-full=y          # 完整DHCP/DNS
CONFIG_PACKAGE_odhcpd=y                # DHCPv6基础
CONFIG_PACKAGE_luci-app-dnsmasq=y      # LuCI管理DNS/DHCP
CONFIG_PACKAGE_firewall-full=y         # 完整防火墙/NAT转发
CONFIG_PACKAGE_luci-app-firewall=y     # LuCI管理防火墙
CONFIG_PACKAGE_bridge-utils=y          # 网口桥接
CONFIG_PACKAGE_swconfig=y              # 交换机/VLAN配置
CONFIG_PACKAGE_traceroute=y            # 路由追踪
CONFIG_PACKAGE_mtr=y                   # 丢包测试
